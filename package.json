{
    "name": "game-core",
    "version": "1.0.216",
    "main": "release/js/index.js",
    "types": "release/types/index.d.ts",
    "scripts": {
        "dev": "rimraf dist && yarn dev:core && webpack-dev-server --mode development && yarn rm:dts",
        "build": "rimraf release && yarn ver && yarn build:core && yarn build:launcher && yarn dts",
        "build:dev": "webpack --mode=development --output-path=./release --progress",
        "build:launcher": "node --max-old-space-size=4096 node_modules/webpack/bin/webpack.js --mode=production --output-path=./release --progress",
        "dev:core": "webpack --config webpack.core.config.js",
        "build:core": "webpack --config webpack.core.config.js --mode=production --output-path=./release --progress",
        "ver": "genversion version.js",
        "dts": "dts-bundle --configJson dts-bundle.json && yarn rm:dts",
        "rm:dts": "rimraf types"
    },
    "repository": "git@code.apowo.com:PixelPai/game-core.git",
    "author": "Seven <seven@apowo.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/chance": "^1.0.7",
        "config": "^3.2.2",
        "config-webpack": "^1.0.4",
        "copy-webpack-plugin": "^5.0.4",
        "dts-bundle": "^0.7.3",
        "expose-loader": "^0.7.5",
        "file-loader": "^4.2.0",
        "genversion": "^2.2.0",
        "html-webpack-plugin": "^3.2.0",
        "rimraf": "^3.0.2",
        "tern": "^0.24.1",
        "terser-webpack-plugin": "^2.1.3",
        "ts-loader": "^6.0.4",
        "tslint": "^5.19.0",
        "tslint-webpack-plugin": "^2.1.0",
        "typescript": "^3.5.2",
        "webpack": "^4.35.2",
        "webpack-cli": "^3.3.5",
        "webpack-dev-server": "^3.7.2",
        "worker-loader": "^2.0.0"
    },
    "dependencies": {
        "buffer": "^5.2.1",
        "chance": "^1.1.3",
        "copy-text-to-clipboard": "^2.1.1",
        "game-capsule": "git+ssh://git@code.apowo.com:PixelPai/game-capsule.git#dev",
        "i18next": "^19.0.3",
        "i18next-browser-languagedetector": "^4.0.1",
        "i18next-xhr-backend": "^3.2.2",
        "maxrects-packer": "^2.6.0",
        "net-socket-packet": "git+ssh://git@code.apowo.com:PixelPai/net-socket-packet.git",
        "phaser": "^3.22.0",
        "simple-sha1": "^3.0.1"
    }
}
