{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es2015",
      "webworker",
      "dom"
    ],
    "declaration": false,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/apowophaserui/types"
    ],
    "baseUrl": ".",
    "noImplicitUseStrict": true,
    "alwaysStrict": false,
    "paths": {
      "utils": [
        "./src/utils/index"
      ],
      "structure": [
        "./src/structure/index"
      ],
      "pica": [
        "./src/pica/ui/index"
      ],
    },
  },
  "exclude": [
    "node_modules",
    "lib/rexui/scripts"
  ]
}